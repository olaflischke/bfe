<Window x:Class="GefluegelUi.NeuesTier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GefluegelUi"
        mc:Ignorable="d"
        Title="NeuesTier" Height="136.675" Width="164.547">
    <Canvas>
        <ComboBox ItemsSource="{Binding Tiere}" SelectedItem="{Binding Tier}" Width="80" Canvas.Left="58" Canvas.Top="38" />
        <Label Content="Name" Canvas.Left="11" Canvas.Top="7" />
        <TextBox Text="{Binding Tier.Name}" Width="80" Height="23" Canvas.Left="58" Canvas.Top="10" />
        <Button x:Name="btnNeu" Content="Speichern" Width="80" Height="23" Canvas.Left="58" Canvas.Top="65" Click="btnNeu_Click" />
    </Canvas>
</Window>
